<Window x:Class="ProviderSystemManager.WPF.Views.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProviderSystemManager.WPF.Views"
        mc:Ignorable="d"
        Title="Вход" Height="200" Width="400" DataContext="{Binding Source={StaticResource VMLocator}, Path=SignInWindowViewModel}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Margin="10" Text="{Binding Login}"/>
        <TextBox Grid.Row="1" Margin="10" Text="{Binding Password}"/>
        <Button Grid.Row="2" HorizontalAlignment="Center" Content="Войти" Margin="0 6" Padding="20 0" Command="{Binding SignInCommand}"/>
    </Grid>
</Window>
